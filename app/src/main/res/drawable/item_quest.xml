<!-- res/layout/item_quest.xml -->
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="10dp"
    android:foreground="?attr/selectableItemBackground"
    app:cardUseCompatPadding="true"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/QuestTodo"
    app:strokeColor="@android:color/transparent"
    app:shapeAppearanceOverlay="@style/Shape.Pill">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="16dp">

        <!-- Left icon -->
        <ImageView
            android:id="@+id/imgIcon"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:contentDescription="@string/quest_icon"
            android:src="@drawable/ic_flame"
            android:tint="@color/GoldenEmber"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <!-- Title / description -->
        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="1 Day Streak"
            android:textSize="20sp"
            android:textColor="@color/GoldenEmber"
            android:fontFamily="@font/aref_ruqaa"
            app:layout_constraintStart_toEndOf="@id/imgIcon"
            app:layout_constraintEnd_toStartOf="@id/trailingGroup"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <!-- Trailing group (reward OR tick) -->
        <LinearLayout
            android:id="@+id/trailingGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <!-- Reward (shown when NOT complete) -->
            <LinearLayout
                android:id="@+id/rewardGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/rewardIcon"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginEnd="4dp"
                    android:src="@drawable/ic_coin"
                    android:tint="@color/GoldenEmber"
                    android:contentDescription="@null"/>

                <TextView
                    android:id="@+id/rewardText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20"
                    android:textColor="@color/GoldenEmber"
                    android:textSize="14sp"
                    android:fontFamily="@font/aref_ruqaa"/>
            </LinearLayout>

            <!-- Tick (shown when complete) -->
            <ImageView
                android:id="@+id/imgTick"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginStart="12dp"
                android:src="@drawable/ic_tick_filled"
                android:tint="@color/GoldenEmber"
                android:contentDescription="@string/quest_complete"
                android:visibility="gone"/>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
