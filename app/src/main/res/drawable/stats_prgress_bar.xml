<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background of the progress bar -->
    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <solid android:color="#CCCCCC" /> <!-- light grey background -->
            <stroke android:width="2dp" android:color="@color/FireBurst"/> <!-- orange stroke -->
            <corners android:radius="5dp" /> <!-- rounded edges -->
        </shape>
    </item>

    <!-- Progress fill -->
    <item android:id="@android:id/progress">
        <clip>
            <shape android:shape="rectangle">
                <solid android:color="@color/MidnightViolet"/>
                <stroke android:width="2dp" android:color="@color/FireBurst"/><!-- darker grey fill -->
                <corners android:radius="5dp" />
            </shape>
        </clip>
    </item>

</layer-list>
