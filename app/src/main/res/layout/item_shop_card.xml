<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:foreground="?attr/selectableItemBackground"
    android:backgroundTint="#2C4353"
    app:cardElevation="6dp"
    app:cardCornerRadius="10dp"
    app:strokeColor="@android:color/transparent">

    <!-- Main vertical layout with padding -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Item title at top -->
        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Twisted Horns"
            android:textColor="@color/GoldenEmber"
            android:fontFamily="@font/aref_ruqaa"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_gravity="center"/>

        <!-- Preview icon in center -->
        <ImageView
            android:id="@+id/preview"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitCenter"
            android:src="@drawable/shop"/>


        <!-- Bottom bar: price chip and action button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:orientation="horizontal">

            <!-- Price chip with currency icon (hidden when owned/equipped) -->
            <LinearLayout
                android:id="@+id/priceChip"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="32dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:gravity="center"
                android:layout_marginEnd="6dp"
                android:orientation="horizontal"
                android:background="@drawable/bg_price_chip">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="4dp"
                    android:src="@drawable/currency"/>

                <TextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="90"
                    android:textColor="@color/GoldenEmber"
                    android:fontFamily="@font/aref_ruqaa"/>
            </LinearLayout>


            <!-- Action button: "Buy", "Equip", or "Equipped" -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/actionBtn"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Equip"
                android:textAllCaps="false"
                android:textColor="@color/GoldenEmber"
                app:backgroundTint="#2B3E4B"
                app:cornerRadius="12dp"/>
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>