<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dashboard"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/MidnightViolet">

    <!-- PANEL -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/panel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#233742"
        app:cardCornerRadius="0dp"
        app:cardElevation="0dp"
        app:cardUseCompatPadding="false"
        app:cardPreventCornerOverlap="false"
        app:strokeColor="@android:color/transparent"
        app:strokeWidth="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:paddingBottom="12dp">

            <TextView
                android:id="@+id/monthTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/breathe_fire_iii"
                android:paddingTop="5dp"
                android:paddingBottom="15dp"
                android:text="THIS MONTH"
                android:textColor="@color/GoldenEmber"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/statsRow"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:paddingBottom="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/monthTitle">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/income"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/breathe_fire_iii"
                        android:text="Income"
                        android:textAlignment="center"
                        android:textColor="@color/GoldenEmber"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/income_amount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/aref_ruqaa"
                        android:text="R25,000"
                        android:textAlignment="center"
                        android:textColor="@color/GoldenEmber"
                        android:textSize="20sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/expenses"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/breathe_fire_iii"
                        android:text="Expenses"
                        android:textAlignment="center"
                        android:textColor="@color/GoldenEmber"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/expenses_amount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/aref_ruqaa"
                        android:text="R9,400"
                        android:textAlignment="center"
                        android:textColor="@color/GoldenEmber"
                        android:textSize="20sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/remaining"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/breathe_fire_iii"
                        android:text="Remaining"
                        android:textAlignment="center"
                        android:textColor="@color/GoldenEmber"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/remaining_amount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/aref_ruqaa"
                        android:text="R15,600"
                        android:textAlignment="center"
                        android:textColor="@color/GoldenEmber"
                        android:textSize="20sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- visible in collapsed -->
            <View
                android:id="@+id/goalBar"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginTop="28dp"
                android:background="@drawable/bg_goalbar"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/statsRow" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <ImageButton
        android:id="@+id/toggleArrow"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginTop="-8dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:src="@drawable/collapse_arrow"
        app:layout_constraintEnd_toEndOf="@id/panel"
        app:layout_constraintStart_toStartOf="@id/panel"
        app:layout_constraintTop_toBottomOf="@id/panel"
        app:tint="@color/GoldenEmber"/>


    <LinearLayout
        android:id="@+id/moodRow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/MidnightViolet"
        android:orientation="horizontal"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        app:layout_constraintTop_toBottomOf="@id/toggleArrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/moodColumn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/moodTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/aref_ruqaa"
                android:paddingLeft="3dp"
                android:paddingTop="6dp"
                android:text="Mood"
                android:textColor="@color/GoldenEmber"
                android:textStyle="bold"/>

            <ImageView
                android:id="@+id/MoodImg"
                android:layout_width="45dp"
                android:layout_height="40dp"
                android:paddingLeft="3dp"
                android:scaleType="fitCenter"
                android:src="@drawable/happy_mood"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/shopColumn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/shopTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:fontFamily="@font/aref_ruqaa"
                android:paddingRight="15dp"
                android:text="Shop"
                android:textColor="@color/GoldenEmber"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/shopImg"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:layout_gravity="right"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/shop"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/xp_currencyRow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/MidnightViolet"
        android:orientation="horizontal"
        android:paddingStart="10dp"
        android:paddingEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/moodRow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/xpImg"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/xp_bar"/>

        <TextView
            android:id="@+id/xpTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:fontFamily="@font/aref_ruqaa"
            android:paddingStart="10dp"
            android:text="XP"
            android:textColor="@color/GoldenEmber"/>

        <ImageView
            android:id="@+id/currencyImg"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="5dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/currency"/>

        <TextView
            android:id="@+id/currencyTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/aref_ruqaa"
            android:paddingTop="5dp"
            android:text="200"
            android:textColor="@color/GoldenEmber"
            android:textSize="16sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/dragon"
        android:layout_width="0dp"
        android:layout_height="500dp"
        android:layout_marginTop="20dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/dragon_placeholder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/xp_currencyRow" />



    <ImageButton
        android:id="@+id/achievementsImg"
        android:background="@color/MidnightViolet"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:layout_marginBottom="100dp"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dragon"
        app:srcCompat="@drawable/achievements"/>

    <!-- ACHIEVEMENTS OVERLAY (hidden by default) -->
    <FrameLayout
        android:id="@+id/achievementsOverlay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        android:background="#80000000"
        android:elevation="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/achievementsCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="24dp"
            android:backgroundTint="#142431"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <TextView
                    android:id="@+id/achTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/breathe_fire_iii"
                    android:text="Badges"
                    android:textAlignment="center"
                    android:textColor="@color/GoldenEmber"
                    android:textSize="24sp"
                    android:paddingTop="10dp"
                    android:paddingBottom="12dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/closeX"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageButton
                    android:id="@+id/closeX"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:scaleType="fitCenter"
                    android:background="@android:color/transparent"
                    android:contentDescription="Close"
                    android:src="@drawable/close_cross"
                    android:tint="@color/GoldenEmber"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <!-- RecyclerView pills -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/achRecycler"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    app:layout_constraintTop_toBottomOf="@id/achTitle"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>
    </FrameLayout>



</androidx.constraintlayout.widget.ConstraintLayout>
