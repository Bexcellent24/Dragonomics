<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dashboard"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/MidnightViolet">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/statsContainer"
        android:name="com.TheBudgeteers.dragonomics.ui.StatsFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/DeepAbyss"/>

    <LinearLayout
        android:id="@+id/moodRow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/MidnightViolet"
        android:orientation="horizontal"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        app:layout_constraintTop_toBottomOf="@id/statsContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/moodColumn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/moodTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/aref_ruqaa"
                android:paddingLeft="3dp"
                android:paddingTop="6dp"
                android:text="Mood"
                android:textColor="@color/GoldenEmber"
                android:textStyle="bold"/>

            <ImageView
                android:id="@+id/MoodImg"
                android:layout_width="45dp"
                android:layout_height="40dp"
                android:paddingLeft="3dp"
                android:scaleType="fitCenter"
                android:src="@drawable/happy_mood"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/shopColumn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/shopTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:fontFamily="@font/aref_ruqaa"
                android:paddingRight="15dp"
                android:text="Shop"
                android:textColor="@color/GoldenEmber"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/shopImg"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:layout_gravity="right"
                android:scaleType="fitCenter"
                android:background="@color/MidnightViolet"
                app:srcCompat="@drawable/shop"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/xp_currencyRow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/MidnightViolet"
        android:orientation="horizontal"
        android:paddingStart="10dp"
        android:paddingEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/moodRow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <FrameLayout
            android:id="@+id/xpBarFrame"
            android:layout_width="120dp"
            android:layout_height="40dp">

            <!-- Progress line: exact height, pinned from TOP, with asymmetric insets -->
            <com.google.android.material.progressindicator.LinearProgressIndicator
                android:id="@+id/xpProgress"
                style="@style/Widget.Material3.LinearProgressIndicator"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="top"
                android:layout_marginStart="22dp"
                android:layout_marginTop="21dp"
                android:layout_marginEnd="20dp"
                android:max="100"
                android:progress="0"
                app:indicatorColor="@color/GoldenEmber"
                app:trackColor="@android:color/transparent"
                app:trackCornerRadius="5dp"
                app:trackThickness="10dp" />

            <ImageView
                android:id="@+id/xpImg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/xp_bar" />
        </FrameLayout>

        <TextView
            android:id="@+id/xpTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:fontFamily="@font/aref_ruqaa"
            android:paddingStart="10dp"
            android:text="XP"
            android:textColor="@color/GoldenEmber"/>

        <ImageView
            android:id="@+id/currencyImg"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="5dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/currency"/>

        <TextView
            android:id="@+id/currencyTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/aref_ruqaa"
            android:paddingTop="5dp"
            android:text="200"
            android:textColor="@color/GoldenEmber"
            android:textSize="16sp"
            android:textStyle="bold"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/wing_left"
        android:layout_width="100dp"
        android:layout_height="100dp"

        app:layout_constraintStart_toStartOf="@id/dragon"
        app:layout_constraintTop_toTopOf="@id/dragon" />

    <ImageView
        android:id="@+id/wing_right"
        android:layout_width="100dp"
        android:layout_height="100dp"

        app:layout_constraintStart_toStartOf="@id/dragon"
        app:layout_constraintTop_toTopOf="@id/dragon" />


    <ImageView
        android:id="@+id/horn_left"
        android:layout_width="60dp"
        android:layout_height="60dp"

        app:layout_constraintStart_toStartOf="@id/dragon"
        app:layout_constraintTop_toTopOf="@id/dragon" />

    <ImageView
        android:id="@+id/dragon"
        android:layout_width="360dp"
        android:layout_height="360dp"
        android:padding="70dp"
        android:layout_marginTop="20dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/dragon_placeholder"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigationView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/xp_currencyRow" />




    <ImageView
        android:id="@+id/horn_right"
        android:layout_width="60dp"
        android:layout_height="60dp"

        app:layout_constraintStart_toStartOf="@id/dragon"
        app:layout_constraintTop_toTopOf="@id/dragon" />


    <ImageButton
        android:id="@+id/achievementsImg"
        android:background="@color/MidnightViolet"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:layout_marginBottom="5dp"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/dragon"
        app:srcCompat="@drawable/achievements"/>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/DeepAbyss"
        android:paddingTop="0dp"
        android:paddingBottom="0dp"
        app:itemIconSize="28dp"
        app:itemIconTint="@null"
        app:itemBackground="@android:color/transparent"
        app:itemTextColor="@color/nav_item_color"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/bottom_nav_menu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>
