<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profile_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/DeepAbyss"
            android:orientation="vertical"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/txt_welcome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|center_horizontal"
                android:fontFamily="@font/aref_ruqaa"
                android:text="Welcome To"
                android:textColor="@color/GoldenEmber"
                android:textSize="20sp"
                android:textStyle="bold" />

            <FrameLayout
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <ImageView
                    android:id="@+id/img_home_logo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/app_name"
                    android:maxHeight="180dp"
                    android:padding="0dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/home_page_logo" />
            </FrameLayout>

            <TextView
                android:id="@+id/txt_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top|center_horizontal"
                android:layout_marginTop="-20dp"
                android:fontFamily="@font/battles_bridge_regular"
                android:text="Dragonomics"
                android:textAlignment="center"
                android:textColor="@color/GoldenEmber"
                android:textSize="34sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/DeepAbyss"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_login_tab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/aref_ruqaa"
                android:gravity="center"
                android:text="@string/login_u"
                android:textAllCaps="false"
                android:textColor="@color/GoldenEmber"
                android:textSize="18sp"
                android:textStyle="bold"
                app:backgroundTint="@android:color/transparent"
                app:cornerRadius="0dp" />

            <Button
                android:id="@+id/btn_signup_tab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/aref_ruqaa"
                android:gravity="center"
                android:text="Sign Up"
                android:textAllCaps="false"
                android:textColor="@color/GoldenEmber"
                android:textSize="18sp"
                android:textStyle="bold"
                app:backgroundTint="@android:color/transparent"
                app:cornerRadius="0dp"
                app:rippleColor="@color/GoldenEmber" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginVertical="0dp"
            android:background="@color/MidnightViolet"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingVertical="0dp"
            android:paddingLeft="45dp"
            android:paddingTop="0dp"
            android:paddingRight="45dp">

            <EditText
                android:id="@+id/edt_name"
                style="@style/Widget.AppCompat.AutoCompleteTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginBottom="40dp"
                android:background="@color/white"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/aref_ruqaa"
                android:hint="Password"
                android:inputType="textPassword"
                android:padding="10dp"
                android:textColor="@color/GoldenEmber"
                android:textColorHint="@color/GoldenEmber" />

            <EditText
                android:id="@+id/edt_email"
                style="@style/Widget.AppCompat.AutoCompleteTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:background="@color/white"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/aref_ruqaa"
                android:hint="Email"
                android:inputType="textPassword"
                android:padding="10dp"
                android:textColor="@color/GoldenEmber"
                android:textColorHint="@color/GoldenEmber" />

            <CheckBox
                android:id="@+id/chk_remember"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/aref_ruqaa"
                android:text="Remember me"
                android:textColor="@color/GoldenEmber" />

            <Button
                android:id="@+id/btn_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:backgroundTint="@color/FireBurst"
                android:fontFamily="@font/aref_ruqaa"
                android:text="Login"
                app:cornerRadius="5dp" />

        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
