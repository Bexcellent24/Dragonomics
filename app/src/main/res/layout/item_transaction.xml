<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="4dp"
    android:padding="12dp"
    app:cardBackgroundColor="#582521">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <!-- Category Icon -->
        <ImageView
            android:id="@+id/imgCategoryIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="12dp"
            android:contentDescription="Category Icon"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_foreground" />

        <!-- Text Container -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Transaction title -->
            <TextView
                android:id="@+id/txtTransactionTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/aref_ruqaa"
                android:text="Transaction Title"
                android:textColor="@color/GoldenEmber"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- Transaction date -->
            <TextView
                android:id="@+id/txtTransactionDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/aref_ruqaa"
                android:text="01 Sep 2025"
                android:textColor="@color/GoldenEmber"
                android:textSize="12sp" />

        </LinearLayout>

        <!-- Amount Box -->
        <TextView
            android:id="@+id/txtTransactionAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/amount_box"
            android:fontFamily="@font/aref_ruqaa"
            android:padding="8dp"
            android:text="R1800.00"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>
</androidx.cardview.widget.CardView>